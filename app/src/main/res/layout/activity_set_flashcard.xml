<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SetFlashcardActivity">

    <include layout="@layout/sub_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문제 수"
        android:textColor="@color/black_100"
        android:fontFamily="@font/notosans_bold"
        android:textSize="16sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="124dp" />

    <EditText
        android:id="@+id/set_word_number_edt"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:background="@drawable/shape_wordbox"
        android:hint="단어 개수 입력"
        android:textColor="@color/black_100"
        android:textSize="16sp"
        android:fontFamily="@font/notosans_medium"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/set_play_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_wordbox"
        android:backgroundTint="@color/purple_100"
        android:text="시작하기"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans_bold"
        android:layout_marginTop="124dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

</LinearLayout>