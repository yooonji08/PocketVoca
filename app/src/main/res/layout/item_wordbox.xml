<?xml version="1.0" encoding="utf-8"?>
<!-- 홈 화면의 단어 박스 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_wordbox"
    android:paddingStart="24dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/item_wordbox_word_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="단어를 입력해주세요."
        android:fontFamily="@font/notosans_medium"
        android:textSize="16sp"
        android:textColor="@color/black_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_wordbox_meaning_tv"/>

    <TextView
        android:id="@+id/item_wordbox_meaning_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뜻을 입력해주세요."
        android:fontFamily="@font/notosans_regular"
        android:textSize="14sp"
        android:textColor="@color/black_80"
        app:layout_constraintTop_toBottomOf="@id/item_wordbox_word_tv"
        app:layout_constraintStart_toStartOf="@id/item_wordbox_word_tv"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/item_wordbox_more_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>